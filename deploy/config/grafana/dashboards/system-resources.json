{
  "dashboard": {
    "id": null,
    "title": "在线时间工具 - 系统资源",
    "tags": ["online-time", "system", "resources"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CPU使用率",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[2m])) * 100)",
            "legendFormat": "CPU使用率 - {{instance}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "yAxes": [
          {
            "max": 100,
            "min": 0,
            "unit": "percent"
          }
        ],
        "thresholds": [
          {"value": 80, "colorMode": "critical", "op": "gt"}
        ]
      },
      {
        "id": 2,
        "title": "内存使用率",
        "type": "graph",
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "内存使用率 - {{instance}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "yAxes": [
          {
            "max": 100,
            "min": 0,
            "unit": "percent"
          }
        ],
        "thresholds": [
          {"value": 85, "colorMode": "critical", "op": "gt"}
        ]
      },
      {
        "id": 3,
        "title": "磁盘使用率",
        "type": "graph",
        "targets": [
          {
            "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})) * 100",
            "legendFormat": "磁盘使用率 - {{instance}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [
          {
            "max": 100,
            "min": 0,
            "unit": "percent"
          }
        ],
        "thresholds": [
          {"value": 90, "colorMode": "critical", "op": "gt"}
        ]
      },
      {
        "id": 4,
        "title": "网络流量",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{device!~\"lo|docker.*\"}[5m]) * 8",
            "legendFormat": "入站 - {{instance}} - {{device}}"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{device!~\"lo|docker.*\"}[5m]) * 8",
            "legendFormat": "出站 - {{instance}} - {{device}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "yAxes": [
          {
            "unit": "bps"
          }
        ]
      },
      {
        "id": 5,
        "title": "容器CPU使用率",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (name) (rate(container_cpu_usage_seconds_total{name!=\"\"}[5m])) * 100",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "yAxes": [
          {
            "unit": "percent"
          }
        ]
      },
      {
        "id": 6,
        "title": "容器内存使用",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name!=\"\"}",
            "legendFormat": "{{name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "yAxes": [
          {
            "unit": "bytes"
          }
        ]
      },
      {
        "id": 7,
        "title": "系统负载",
        "type": "graph",
        "targets": [
          {
            "expr": "node_load1",
            "legendFormat": "1分钟负载 - {{instance}}"
          },
          {
            "expr": "node_load5",
            "legendFormat": "5分钟负载 - {{instance}}"
          },
          {
            "expr": "node_load15",
            "legendFormat": "15分钟负载 - {{instance}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "磁盘IO",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(node_disk_read_bytes_total[5m])",
            "legendFormat": "读取 - {{instance}} - {{device}}"
          },
          {
            "expr": "rate(node_disk_written_bytes_total[5m])",
            "legendFormat": "写入 - {{instance}} - {{device}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "yAxes": [
          {
            "unit": "Bps"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}