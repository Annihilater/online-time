# 1Panel单容器部署配置

# 应用配置
DOCKER_IMAGE=online-time:latest
APP_NAME=online-time-app
VERSION=latest

# 端口配置 - 专为1Panel反向代理优化
EXTERNAL_PORT=9653
INTERNAL_PORT=9653

# 环境配置
NODE_ENV=production
TZ=Asia/Shanghai

# 资源限制
MEMORY_LIMIT=256M
MEMORY_RESERVATION=128M
CPU_LIMIT=1.0
CPU_RESERVATION=0.25

# 日志配置
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# 健康检查配置
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=20s

# 1Panel集成标签
DEPLOYMENT_TYPE=1panel-ready
APP_CATEGORY=frontend
APP_DESCRIPTION=在线时间工具集 - 支持闹钟、定时器、倒计时等功能