{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome for Development",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Launch Chrome for Tests",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:51204/__vitest__/",
      "webRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}